<div class = "container">

  <div class = "row mt-3 mb-3">
    <div class = "col">
      <h4>投稿一覧</h4>
      <p>画像クリックで詳細に飛べます</p>
    </div>
  </div>


    <div class = "row mt-3 mb-3">

      <% @cars.each do |car| %>

        <div class = "col-md-3">

          <table class = "table table-borderless">
            <thead>
              <tr>
                <th colspan="1"></th>
              </tr>
            </thead>

            <tbody>

              <tr>

                <td><%= link_to (image_tag car.get_car_image(100,100)),car_path(car.id) %><br>
                <%= car.user.name %><br>
                <%= car.maker.maker_name %><br>
                <%= car.aero_maker.aero_maker_name %><br>
                <%= car.car_model %></td>

              </tr>

             </tbody>
          </table>

        </div>

      <% end %>

    </div>

</div>

