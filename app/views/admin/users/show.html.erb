<div class = "container">

  <div class = "row mt-3 mb-3">
    <h5><%= @user.name %>さんの会員詳細</h5>
  </div>

    <%= form_with model: @user,url:admin_user_path(@user.id),method: :PATCH  do |f| %>

        <table class = "table table-borderless">

          <tr><td>会員ID</td><td><%= @user.id %></td></tr>

          <tr><td>ユーザー名</td><td><%= @user.name %></td></tr>

          <tr><td>メールアドレス</td><td><%= @user.email %></td></tr>

          <tr><td>会員ステータス</td><td>

          <%= f.radio_button :is_deleted,false %>
          <%= f.label :is_deleted_active, "有効" %>

          <%= f.radio_button :is_deleted,true %>
          <%= f.label :is_deleted_nil, "退会" %></td></tr>

        </table>

          <%= f.submit '変更を保存' ,class:"btn btn-success" %>

    <% end %>

</div>

