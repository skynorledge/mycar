<div class = "container">

  <div class = "row mt-3 mb-3">
    <div class = "col-md-8">
      <h5>会員一覧</h5>
    </div>
  </div>

  <!--<div class="text-danger">-->
  <!--  <%#= flash[:notice] %>-->
  <!--</div>-->

  <div class = "row mt-3 mb-3">

        <table class = "table">
          <thead>
            <tr class="table-active">
              <th>会員ID</th>
              <th>ユーザー名</th>
              <th>メールアドレス</th>
              <th>ステータス</th>
            </tr>
          </thead>

          <tbody>

            <% @users.each do |user| %>

            <tr>

              <td><%= user.id %>
              </td>

              <td><%= link_to admin_user_path(user.id), class:'text-black' do %>
              <%= user.name %>
              <% end %>
              </td>

              <td><%= user.email %>
              </td>

              <% if user.is_deleted == true %>

                <td class="text-secondary"><%= "退会" %></td>

              <% else %>

                <td class="text-success"><%= "有効" %></td>

              <% end %>

            </tr>

            <% end %>


          </tbody>
        </table>

  </div>

  <div class="d-flex justify-content-center">
    <%= paginate @users, class: 'my-pagination' %>
  </div>

</div>