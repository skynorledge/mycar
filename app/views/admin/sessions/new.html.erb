<div class = "container">

  <div class = "row mt-3 mb-3 justify-content-md-center">

    <h5>管理者ログイン</h5>

  </div>

  <div class = "row mt-3 mb-3 justify-content-md-center">

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <table class = "table table-borderless">

        <tr><td><%= f.label :メールアドレス %></td><td>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" ,size: "60×35" %></td></tr>

        <tr><td><%= f.label :パスワード %></td><td>
        <%= f.password_field :password, autocomplete: "current-password",size: "60×35"  %></td></tr>

      </table>

  </div>

  <div class = "row mt-3 mb-3 justify-content-md-center" >

      <div class="actions">
        <%= f.submit "ログイン",class:"btn btn-primary" %>
      </div>

  </div>

    <% end %>

    <%= render "admin/shared/links" %>

  </div>

</div>
