<!DOCTYPE html>
<html>
  <head>
    <title>precious car</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="d-flex flex-column vh-100">
    <header class="shadow-sm">
      <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">
          <a class="navbar-brand p-3" href="/"><%= image_tag('mycar-logo', width:100,height:100) %></a>
          <h4>precios car</h4>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                        aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">


            <% if user_signed_in? %>


            <div style="text-align:center">
            </div>

            <li class="nav-item">
              <%#= link_to "マイページ",info_edit_path(current_user), class: 'nav-link text-dark' %>
            </li>

            <li class="nav-item">
              <%= link_to "投稿一覧", cars_path , class: 'nav-link text-dark' %>
            </li>

            <li class="nav-item">
              <%= link_to "新規投稿", new_car_path, class: 'nav-link text-dark' %>
            </li>

            <li class="nav-item">
              <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: 'nav-link text-dark' %>
            </li>

            <% elsif admin_signed_in? %>

            <li class="nav-item">
              <%= link_to "投稿一覧", admin_root_path, class: 'nav-link text-dark' %>
            </li>

            <li class="nav-item">
              <%= link_to "会員一覧", admin_users_path , class: 'nav-link text-dark' %>
            </li>

            <li class="nav-item">
              <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: 'nav-link text-dark' %>
            </li>



            <% else %>


            <li class="nav-item">
              <%= link_to "新規登録", new_user_registration_path, class: 'nav-link text-dark' %>
            </li>

            <li class="nav-item">
              <%= link_to "ログイン", new_user_session_path, class: 'nav-link text-dark' %>
            </li>

            <% end %>

            </ul>
          </div>
        </div>
      </nav>
    </header>

    <main class="mb-auto">
    <%= yield %>
    </main>
  </body>
</html>
